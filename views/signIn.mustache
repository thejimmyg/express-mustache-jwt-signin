{{>top}}
      <div class="p-3 flex-grow-1">
        <h1>Sign In</h1>
        {{>signin_top}}
        {{#signInError}}
        <div class="alert alert-danger">{{signInError}}</div>
        {{/signInError}}
        <form id="data-pjax" method="POST" action="{{action}}" enctype="application/x-www-form-urlencoded">
          <div class="form-group">
            <label for="username">Username:</label>
            <input class="form-control" id="username" type="text" placeholder="Username" name="username" value="{{username}}">
          </div>
          <div class="form-group">
            <label for="password">Password:</label>
            <input class="form-control" id="password" type="password" placeholder="Password" name="password">
          </div>
          <button class="btn btn-primary" type="submit">Sign In</button>
        </form>
        {{>signInBottom}}
        <script type="application/javascript">
          {{^username}}$("#username").focus(){{/username}}
        </script>
      </div>
{{>bottom}}
